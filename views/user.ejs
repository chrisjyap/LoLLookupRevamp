<!doctype html>
<html ng-app ="myApp" lang="en">
<head>
    <meta charset="UTF-8">
    <title>Stats for <%= name %></title>
    <link rel="stylesheet" href="css/bootstrap.css"/>
    <link rel="stylesheet" href="stylesheets/style.css"/>
    <script>
        var myApp = angular.module('myApp', ['ngRoute', 'myApp.menu']);
        myApp.constant('summonerID', '<%= id %>');
        myApp.constant('rank', '<%= rankIcon%>');
        myApp.config(function($routeProvider){
            $routeProvider.when('/runes', {
                templateUrl: '/partials/_runes.html'//,
                //controller: 'MenuController'
            }).when('/', {
                templateUrl: 'partials/_main.html'//,
                //controller: 'MenuController'
            }).otherwise({
                    redirectTo: '/'
            });
        });
    </script>
</head>
<body ng-controller= "MenuController">
    <div class="page-header custom-header">
        <div class="over-half-page">
            <img src="<%= profileIcon %>" />
            <span class="large-text"> <%= name %></span>
            <div>
                <img src="/images/<%= rankIcon %>" />
                <span class = 'custom-caption'>{{rank}}</span>
            </div>
        </div>
        <div class="btn-group-lg btn-group header-buttons" role="group">
            <button type="button" class="btn btn-default active">Main</button>
            <button type="button" class="btn btn-default">Runes</button>
            <button type="button" class="btn btn-default">Masteries</button>
        </div>
    </div>

    <div ng-view></div>

    <script src="jquery/dist/jquery.js"></script>
    <script src="bootstrap/dist/js/bootstrap.js"></script>
    <script src="angular/angular.js"></script>
    <script src="angular-route/angular-route.js"></script>
    <script src="/javascripts/angularController.js"></script>
</body>
</html>
